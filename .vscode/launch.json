{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server (Exercise 2)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/exercise-2/src/server",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${workspaceFolder}/exercise-2/src",
      "environment": [],
